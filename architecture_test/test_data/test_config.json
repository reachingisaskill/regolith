{
  "window" :
  {
    "screen_width" : 1024,
    "screen_height" : 768,
    "default_colour" : [ 150, 150, 500, 255 ],
    "title" : "Regolith Integration Test"
  },

  "fonts" :
  {
    "default_font" : "default",
    "font_list" :
    [
      {
        "name" : "default",
        "path" : "test_data/test_font.ttf",
        "size" : 28
      },
      {
        "name" : "default_big",
        "path" : "test_data/test_font.ttf",
        "size" : 42
      }
    ]
  },

  "input_device" :
  {
    "require" : [ "keyboard", "mouse" ],
    "keymappings" :
    [
      {
        "name" : "platformer",
        "keymapping" :
        [ 
          {
            "type" : "keyboard",
            "mapping" :
            {
              "escape" : "quit",
              "p"      : "pause",
              "space"  : "jump",
              "w"      : "move_up",
              "s"      : "move_down",
              "a"      : "move_left",
              "d"      : "move_right",
              "return" : "attack"
            }
          }
        ]
      },
      {
        "name" : "title",
        "keymapping" :
        [ 
          {
            "type" : "keyboard",
            "mapping" :
            {
              "escape" : "quit",
              "return" : "select",
              "tab" : "focus_next"
            }
          },
          {
            "type" : "mouse_buttons",
            "mapping" :
            {
              "left" : "click"
            }
          }
        ]
      }
    ]
  },

  "audio_device" :
  {
    "sample_frequency" : 22050,
    "audio_channels" : 2,
    "chunk_size" : 1024,
    "music_volume" : 0.1,
    "effect_volume" : 0.5,

    "music_files" :
    [
      {
        "name" : "the_beat",
        "path" : "test_data/test_beat.wav"
      }
    ],

    "effect_files" :
    [
      {
        "name" : "thud",
        "path" : "test_data/test_thud.wav"
      },
      {
        "name" : "landing",
        "path" : "test_data/test_landing.wav"
      }
    ]
  },

  "textures" :
  {
    "texture_files" :
    [
      {
        "name" : "title_background",
        "path" : "test_data/test_wallpaper.jpg"
      }
    ],
    "texture_strings" :
    [
    ]
  },

  "game_objects" :
  [
    {
      "name" : "title_background",
      "type" : "simple_sprite",
      "texture_name" : "title_background"
    }
  ],

  "contexts" :
  [
    {
      "name" : "title_context",
      "file" : "test_data/test_title.json"
    }
  ]

}

