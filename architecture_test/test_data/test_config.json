{
  "window" :
  {
    "screen_width" : 1024,
    "screen_height" : 768,
    "default_colour" : [ 150, 150, 500, 255 ],
    "title" : "Regolith Integration Test"
  },

  "fonts" :
  {
    "default_font" : "default",
    "font_list" :
    [
      {
        "name" : "default",
        "path" : "test_data/test_font.ttf",
        "size" : 28
      },
      {
        "name" : "default_big",
        "path" : "test_data/test_font.ttf",
        "size" : 42
      }
    ]
  },

  "input_device" :
  {
    "require" : [ "keyboard", "mouse", "controller" ],
    "keymappings" :
    [
      {
        "name" : "platformer",
        "keymapping" :
        [ 
          {
            "type" : "keyboard",
            "mapping" :
            {
              "escape" : "quit",
              "p"      : "pause",
              "space"  : "jump",
              "w"      : "move_up",
              "s"      : "move_down",
              "a"      : "move_left",
              "d"      : "move_right",
              "return" : "attack"
            }
          }
        ]
      },
      {
        "name" : "title",
        "keymapping" :
        [ 
          {
            "type" : "keyboard",
            "mapping" :
            {
              "escape" : "quit",
              "return" : "select",
              "tab" : "next"
            }
          },
          {
            "type" : "mouse_buttons",
            "mapping" :
            {
              "left" : "click"
            }
          },
          {
            "type" : "controller_buttons",
            "mapping" :
            {
              "A" : "select",
              "B" : "back",
              "dpad_up" : "prev",
              "dpad_down" : "next"
            }
          }
        ]
      }
    ]
  },

  "audio_device" :
  {
    "sample_frequency" : 22050,
    "audio_channels" : 2,
    "chunk_size" : 1024,
    "music_volume" : 0.1,
    "effect_volume" : 0.5,

    "music_files" :
    [
      {
        "name" : "the_beat",
        "path" : "test_data/test_beat.wav"
      }
    ],

    "effect_files" :
    [
      {
        "name" : "thud",
        "path" : "test_data/test_thud.wav"
      },
      {
        "name" : "landing",
        "path" : "test_data/test_landing.wav"
      }
    ]
  },

  "textures" :
  {
    "texture_files" :
    [
      {
        "name" : "title_background",
        "path" : "test_data/test_wallpaper.jpg"
      },
      {
        "name" : "test_animated_sprite",
        "path" : "test_data/test_spritesheet.png",
        "colour_key" : [ 255, 255, 255 ]
      }
    ],
    "texture_strings" :
    [
      {
        "name" : "title_welcome1",
        "text" : "Welcome to the Regolith Integration Test",
        "font" : "default_big",
        "colour" : [ 255, 255, 255, 255]
      },
      {
        "name" : "title_start_button_up",
        "text" : "Click here to start",
        "font" : "default",
        "colour" : [ 160, 160, 160, 255]
      },
      {
        "name" : "title_start_button_down",
        "text" : "Click here to start",
        "font" : "default",
        "colour" : [ 255, 160, 160, 255]
      },
      {
        "name" : "title_start_button_focus",
        "text" : "Click here to start",
        "font" : "default",
        "colour" : [ 255, 255, 255, 255]
      },
      {
        "name" : "title_test_button_up",
        "text" : "Test button",
        "font" : "default",
        "colour" : [ 160, 160, 160, 255]
      },
      {
        "name" : "title_test_button_down",
        "text" : "Test button",
        "font" : "default",
        "colour" : [ 255, 160, 160, 255]
      },
      {
        "name" : "title_test_button_focus",
        "text" : "Test button",
        "font" : "default",
        "colour" : [ 255, 255, 255, 255]
      },
      {
        "name" : "title_quit_button_up",
        "text" : "Exit",
        "font" : "default",
        "colour" : [ 160, 160, 160, 255]
      },
      {
        "name" : "title_quit_button_down",
        "text" : "Exit",
        "font" : "default",
        "colour" : [ 255, 160, 160, 255]
      },
      {
        "name" : "title_quit_button_focus",
        "text" : "Exit",
        "font" : "default",
        "colour" : [ 255, 255, 255, 255]
      }
    ]
  },

  "game_objects" :
  [
    {
      "name" : "title_background",
      "type" : "simple_sprite",
      "texture_name" : "title_background"
    },
    {
      "name" : "test_animated_sprite",
      "type" : "animated_sprite",
      "texture_name" : "test_animated_sprite",
      "number_rows" : 2,
      "number_columns" : 2,
      "update_period" : 1000
    },
    {
      "name" : "title_welcome1",
      "type" : "simple_sprite",
      "texture_name" : "title_welcome1"
    },
    {
      "name" : "title_start_button",
      "type" : "simple_button",
      "textures" :
      {
        "normal" : 
        {
          "texture_name" : "title_start_button_up"
        },
        "focus" : 
        {
          "texture_name" : "title_start_button_focus"
        },
        "down" : 
        {
          "texture_name" : "title_start_button_down"
        }
      },
      "signals" : []
    },
    {
      "name" : "title_test_button",
      "type" : "simple_button",
      "textures" :
      {
        "normal" : 
        {
          "texture_name" : "title_test_button_up"
        },
        "focus" : 
        {
          "texture_name" : "title_test_button_focus"
        },
        "down" : 
        {
          "texture_name" : "title_test_button_down"
        }
      },
      "signals" : []
    },
    {
      "name" : "title_quit_button",
      "type" : "simple_button",
      "textures" :
      {
        "normal" : 
        {
          "texture_name" : "title_quit_button_up"
        },
        "focus" : 
        {
          "texture_name" : "title_quit_button_focus"
        },
        "down" : 
        {
          "texture_name" : "title_quit_button_down"
        }
      },
      "signals" :
      [
        {
          "type" : "game_event",
          "event" : "quit"
        }
      ]
    }
  ],

  "contexts" :
  [
    {
      "name" : "title_context",
      "file" : "test_data/test_title.json"
    }
  ]

}

