{
  "screen_width" : 1024,
  "screen_height" : 768,
  "default_colour" : [ 150, 150, 500, 255 ],
  "default_font" : "default",
  "title" : "Regolith Integration Test",

  "scenes" :
  [
    {
      "file_name" : "test_data/test_scene.json",
      "type" : "platformer"
    }
  ],

  "fonts" :
  [
    {
      "name" : "default",
      "path" : "test_data/test_font.ttf",
      "size" : 28
    }
  ],

  "input_device" :
  {
    "require" : [ "keyboard" ],
    "keymapping" :
    [ 
      {
        "type" : "keyboard",
        "mapping" :
        {
          "escape" : "quit",
          "p"      : "pause",
          "space"  : "jump",
          "w"      : "move_up",
          "s"      : "move_down",
          "a"      : "move_left",
          "d"      : "move_right",
          "return" : "attack"
        }
      }
    ]
  },

  "audio_device" :
  {
    "sample_frequency" : 22050,
    "audio_channels" : 2,
    "chunk_size" : 1024,
    "music_volume" : 0.1,
    "effect_volume" : 0.5,

    "music_files" :
    [
      {
        "name" : "the_beat",
        "path" : "test_data/test_beat.wav"
      }
    ],

    "effect_files" :
    [
      {
        "name" : "thud",
        "path" : "test_data/test_thud.wav"
      }
    ]
  }
}

