{
  "window" :
  {
    "screen_width" : 1024,
    "screen_height" : 768,
    "default_colour" : [ 150, 150, 500, 255 ],
    "title" : "Regolith Integration Test"
  },

  "fonts" :
  {
    "default_font" : "default",
    "font_list" :
    [
      {
        "name" : "default",
        "path" : "test_data/test_font.ttf",
        "size" : 28
      },
      {
        "name" : "default_big",
        "path" : "test_data/test_font.ttf",
        "size" : 42
      }
    ]
  },

  "input_device" :
  {
    "require" : [ "keyboard", "mouse", "controller" ],
    "keymappings" :
    [
      {
        "name" : "platformer",
        "keymapping" :
        [ 
          {
            "type" : "keyboard",
            "mapping" :
            {
              "escape" : "pause",
              "space"  : "jump",
              "w"      : "move_up",
              "s"      : "move_down",
              "a"      : "move_left",
              "d"      : "move_right",
              "return" : "attack"
            }
          },
          {
            "type" : "controller_buttons",
            "mapping" :
            {
              "start"        : "pause",
              "A"            : "jump",
              "dpad_up"      : "move_up",
              "dpad_down"    : "move_down",
              "dpad_left"    : "move_left",
              "dpad_right"   : "move_right",
              "X"            : "attack"
            }
          },
          {
            "type" : "controller_axes",
            "mapping" :
            {
              "leftx" : "move_horizontal",
              "lefty" : "move_vertical"
            }
          }
        ]
      },
      {
        "name" : "title",
        "keymapping" :
        [ 
          {
            "type" : "keyboard",
            "mapping" :
            {
              "escape" : "cancel",
              "return" : "select",
              "tab" : "next",
              "w"      : "prev",
              "s"      : "next",
              "a"      : "prev",
              "d"      : "next",
              "up"     : "prev",
              "down"   : "next",
              "left"   : "prev",
              "right"  : "next"
            }
          },
          {
            "type" : "mouse_buttons",
            "mapping" :
            {
              "left" : "click"
            }
          },
          {
            "type" : "controller_buttons",
            "mapping" :
            {
              "A" : "select",
              "B" : "back",
              "dpad_up" : "prev",
              "dpad_down" : "next",
              "dpad_left" : "prev",
              "dpad_right" : "next",
              "start" : "cancel"
            }
          }
        ]
      }
    ]
  },

  "audio_device" :
  {
    "sample_frequency" : 22050,
    "audio_channels" : 2,
    "chunk_size" : 1024,
    "music_volume" : 0.1,
    "effect_volume" : 0.5,

    "music_files" :
    [
      {
        "name" : "the_beat",
        "path" : "test_data/test_beat.wav"
      }
