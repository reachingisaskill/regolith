{
  "window" :
  {
    "screen_width" : 1024,
    "screen_height" : 768,
    "default_colour" : [ 150, 150, 500, 255 ],
    "title" : "Regolith Integration Test"
  },

  "fonts" :
  {
    "default_font" : "default",
    "font_list" :
    [
      {
        "name" : "default",
        "path" : "test_data/test_font.ttf",
        "size" : 28
      },
      {
        "name" : "default_big",
        "path" : "test_data/test_font.ttf",
        "size" : 42
      }
    ]
  },

  "input_device" :
  {
    "require" : [ "keyboard", "mouse" ],
    "keymappings" :
    [
      {
        "name" : "platformer",
        "keymapping" :
        [ 
          {
            "type" : "keyboard",
            "mapping" :
            {
              "escape" : "quit",
              "p"      : "pause",
              "space"  : "jump",
              "w"      : "move_up",
              "s"      : "move_down",
              "a"      : "move_left",
              "d"      : "move_right",
              "return" : "attack"
            }
          }
        ]
      },
      {
        "name" : "title",
        "keymapping" :
        [ 
          {
            "type" : "keyboard",
            "mapping" :
            {
              "escape" : "quit",
              "return" : "select",
              "tab" : "focus_next"
            }
          },
          {
            "type" : "mouse_buttons",
            "mapping" :
            {
              "left" : "click"
            }
          }
        ]
      }
    ]
  },

  "audio_device" :
  {
    "sample_frequency" : 22050,
    "audio_channels" : 2,
    "chunk_size" : 1024,
    "music_volume" : 0.1,
    "effect_volume" : 0.5,

    "music_files" :
    [
      {
        "name" : "the_beat",
        "path" : "test_data/test_beat.wav"
      }
    ],

    "effect_files" :
    [
      {
        "name" : "thud",
        "path" : "test_data/test_thud.wav"
      },
      {
        "name" : "landing",
        "path" : "test_data/test_landing.wav"
      }
    ]
  },

  "textures" :
  {
    "texture_files" :
    [
      {
        "name" : "background_texture",
        "path" : "test_data/test_background.png"
      },
      {
        "name" : "title_background",
        "path" : "test_data/test_wallpaper.jpg"
      },
      {
        "name" : "dot_texture",
        "path" : "test_data/test_ball.png",
        "colour_key" : [ 0, 255, 255 ]
      },
      {
        "name" : "ground_texture",
        "path" : "test_data/test_ground.png"
      },
      {
        "name" : "spritesheet_test",
        "path" : "test_data/test_spritesheet.png",
        "colour_key" : [ 255, 255, 255 ]
      }
    ],
    "texture_strings" :
    [
      {
        "name" : "header_text",
        "text" : "Press Return to toggle fullscreen",
        "colour" : [ 0, 0, 0, 255 ],
        "font" : "default"
      },
      {
        "name" : "pause_text",
        "text" : "Press \"p\" to unpause",
        "colour" : [ 0, 0, 0, 255 ],
        "font" : "default"
      },
      {
        "name" : "welcome1",
        "text" : "Welcome to the test title page",
        "colour" : [ 255, 255, 255, 255 ],
        "font" : "default_big"
      },
      {
        "name" : "welcome_button_text1",
        "text" : "Click here to play",
        "colour" : [ 150, 150, 150, 255 ],
        "font" : "default"
      },
      {
        "name" : "welcome_button_text_hover",
        "text" : "Click here to play",
        "colour" : [ 255, 255, 255, 255 ],
        "font" : "default"
      },
      {
        "name" : "welcome_button_text_down",
        "text" : "Click here to play",
        "colour" : [ 255, 0, 0, 255 ],
        "font" : "default"
      }
    ]
  },

  "resources" :
  [
    {
      "resource_name" : "title_background",
      "resource_type" : "sprite",
      "texture_name" : "title_background",
      "team_name" : "environment",
      "collision" : "default"
    },
    {
      "resource_name" : "background",
      "resource_type" : "sprite",
      "texture_name" : "background_texture",
      "team_name" : "environment",
      "collision" : "default"
    },
    {
      "resource_name" : "platform",
      "resource_type" : "sprite",
      "team_name" : "environment",
      "texture_name" : "ground_texture",
      "collision" : "default",
      "mass" : 0.0
    },
    {
      "resource_name" : "the_dot",
      "resource_type" : "test_player",
      "texture_name" : "dot_texture",
      "collision" : "default",
