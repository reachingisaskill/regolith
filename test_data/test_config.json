      "resource_type" : "sprite",
      "texture_name" : "welcome1"
    },
    {
      "resource_name" : "welcome_play_button",
      "team_name" : "hud",
      "resource_type" : "button",
      "collision" : "default",
      "state_normal" :
      { 
        "texture_name" : "welcome_button_text1"
