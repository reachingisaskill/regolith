      "resource_type" : "sprite",
      "team_name" : "environment",
      "texture_name" : "spritesheet_test",
      "update_period" : 1000,
      "number_rows" : 2,
      "number_columns" : 2,
      "number_used" : 4,
      "start_number" : 1
    },
    {
      "resource_name" : "fps_text",
      "resource_type" : "fps_string",
