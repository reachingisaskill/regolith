{
  "screen_width" : 1024,
  "screen_height" : 768,
  "default_colour" : [ 150, 150, 500, 255 ],
  "default_font" : "default",
  "title" : "Regolith Integration Test",

  "scenes" :
  [
    {
      "file_name" : "test_data/test_scene.json",
      "type" : "platformer"
    }
  ],

  "fonts" :
  [
    {
      "name" : "default",
      "path" : "test_data/test_font.ttf",
      "size" : 28
    }
  ],

  "input" :
  {
    "require" : [ "keyboard" ],
    "keymapping" :
    [ 
      {
        "type" : "keyboard",
        "mapping" :
        {
          "space"  : "jump",
          "w"      : "move_up",
          "s"      : "move_down",
          "a"      : "move_left",
          "d"      : "move_right",
          "return" : "attack"
        }
      }
    ]
  }
}

